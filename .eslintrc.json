{
	"parser": "babel-eslint",
	"plugins": [
		"react"
	],
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"airbnb-base"
	],
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"env": {
        "browser": true,
        "es6": true
    },
    "globals": {
        "arguments": true
    }
}